<UserControl x:Class="WP7SimulatorApp.maps.ctrls.ProgressingCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80" d:DesignWidth="200">
    <Border BorderThickness="1" BorderBrush="Yellow" Background="LightBlue" CornerRadius="10">
        <Grid x:Name="LayoutRoot">        
    	    <ProgressBar Margin="17,8,23,35" IsIndeterminate="True" Name="progressBar" />
    	    <TextBlock x:Name="txtMsg" Height="23" Margin="36,0,44,6" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</UserControl>
